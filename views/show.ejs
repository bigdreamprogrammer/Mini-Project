<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat show page</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h1>This is Show Page</h1>
    <form method="GET" action="/new">
        <button>New chat</button>
    </form><br>
    <% for(let chat of chats){ %>
    <div class="chat">
        <p>From: <%=chat.from%></p>
        <div class="msg">
            <p><%=chat.msg%></p>
            <form method="GET", action="/<%=chat._id%>/edit">
                <button>Edit</button>
            </form><br>

            <form method="POST", action="/<%=chat._id%>?_method=DELETE">
                <button id="alt">Delete</button>
            </form>
        </div>
        <p>Recived by : <%=chat.to%></p>
        <hr>
        <p><%= chat.created_at.toString().split(" ") [4]%></p>
        <p><%= chat.created_at.toString().split(" ").slice(0,4).join("-")%></p>
    </div>
   <br><br>

<%}%>
    <script>
        let del = document.querySelector("#alt");
        del.addEventListener("click",()=>{
            confirm("are your sure");
        });

    </script>
</body>
</html>

